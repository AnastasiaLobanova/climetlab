    "python.testing.nosetestsEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.pythonPath": "/usr/local/bin/python3",
    "restructuredtext.confPath": "${workspaceFolder}/docs",
    "cSpell.words": [
        "BUFR",
        "ECMWF",
        "Jupyter",
        "Keras",
        "Magics",
        "Matplotlib",
        "autoclass",
        "autofunction",
        "automodule",
        "autoreload",
        "autosummary",
        "climetlab",
        "geopoints",
        "ipynb",
        "maxdepth",
        "netcdf",
        "numpy",
        "plugins",
        "rstcheck",
        "setup",
        "setuptools",
        "startup",
        "toctree",
        "xarray",
        "literalinclude",
    ],
    "python.linting.flake8Args": [
        "--ignore E501"
    ],
    "python.linting.pycodestyleArgs": [
        "--ignore E501"
    ],
    "python.linting.pylamaArgs": [
        "--ignore E501"
    ]
